<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/enigmat_shop</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">P@ssw0rd</property>
        <property name="show_sql">true</property>

        <mapping resource="Product.hbm.xml"/>
        <mapping resource="PurchaseDetail.hbm.xml"/>
        <mapping class="com.enigma.enigmat.model.Customer"/>
        <mapping class="com.enigma.enigmat.model.Purchase"/>
    </session-factory>
</hibernate-configuration>
